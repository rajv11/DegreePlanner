@model IEnumerable<DegreePlanner.Models.DegreePlan>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["AbbrSortParm"]"> @Html.DisplayNameFor(model=> model.DegreePlanAbbrev)</a>
</th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["NameSortParm"]">@Html.DisplayNameFor(model => model.DegreePlanName)</a>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Degree)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Student)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DegreePlanAbbrev)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DegreePlanName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Degree.DegreeAbrev)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Student.FirstName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.DegreePlanId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.DegreePlanId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.DegreePlanId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
